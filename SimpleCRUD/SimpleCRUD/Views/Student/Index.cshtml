@model List<Student>
@{
    ViewData["Title"] = "Students list";
}


<div class="container">
    <h1>Students list</h1>
    <hr />
    <br />
    <br />
    <div class="row">
        <div class="col-lg-12">
            <a asp-controller="student" asp-action="create">Create</a>
        </div>
        <br />
        <br />
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">Age</th>
                        <th scope="col">Phone</th>
                        <th scope="col">Email</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <th scope="row">1</th>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Age</td>
                        <td>@item.Phone</td>
                        <td>@item.Email</td>
                        <td>
                            <a asp-controller="student" asp-action="update" asp-route-id="@item.Id">Update</a>
                            <a asp-controller="student" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you əmin?')">Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>

        </div>
        
    </div>

</div>

