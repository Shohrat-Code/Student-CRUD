@model Student
@{
    ViewData["Title"] = "Create";
}


<div class="container">
    <h1>Create new student</h1>
    <hr />
    <br />
    <div class="row">
        <div class="col-lg-6">
            <form asp-controller="student" asp-action="create" method="post">
                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Name</label>
                    <input class="form-control" asp-for="Name">
                </div>
                <div class="mb-3">
                    <label asp-for="Surname" class="form-label">Surname</label>
                    <input class="form-control" asp-for="Surname">
                </div>
                <div class="mb-3">
                    <label asp-for="Age" class="form-label">Age</label>
                    <input class="form-control" asp-for="Age">
                </div>
                <div class="mb-3">
                    <label asp-for="Phone" class="form-label">Phone</label>
                    <input class="form-control" asp-for="Phone">
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input class="form-control" asp-for="Email">
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-controller="student" class="mx-3" asp-action="index">Back to list</a>
                </div>
            </form>
        </div>
    </div>
</div>

